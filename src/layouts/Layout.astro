---
import { SignedIn, SignedOut, UserButton, SignInButton } from '@clerk/astro/components'
import LoadingSpinner from '../components/LoadingSpinner.astro'
import "../styles/global.css";
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="border-b">
			<div class="max-w-6xl mx-auto px-8 py-4 flex justify-between items-center">
				<div class="flex gap-6">
					<a href="/" class="font-semibold hover:text-blue-600">Home</a>
					<a href="/prerendered" class="text-gray-600 hover:text-blue-600">Prerendered</a>
					<a href="/ssr-example" class="text-gray-600 hover:text-blue-600">SSR</a>
				</div>
				<div class="flex items-center gap-3">
					<SignedIn>
						<UserButton />
						<div slot="fallback">
							<LoadingSpinner />
						</div>
					</SignedIn>
					<SignedOut>
						<a href="/signin" class="px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700">
							Sign In
						</a>
						<div slot="fallback">
							<LoadingSpinner />
						</div>
					</SignedOut>
				</div>
			</div>
		</nav>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
